#include <stdio.h>

int main () {

char word1 [7] = {'b', 'r', 'a', 's', 'i', 'l', ' '};
char word2 [6] = {'e', 'h', ' ', 'b', 'o', 'm'};

// para escrever a primeira palavra
for (int i=0; i < 7 ; ++i) {
    printf("%c", word1[i]);
}

// para escrever a segunda palavra
for (int j=0; j < 6 ; ++j) {
    printf("%c", word2[j]);
}

// como nÃ£o colocou quebra de linha, o compilador junta na mesma linha!!

return 0;
}
