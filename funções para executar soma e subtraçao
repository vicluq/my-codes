#include <stdio.h>

int main(void) {

    int operacao;

    printf("Escolha 1 para 'soma' e 2 para 'subtracao':\n");
    scanf("%i", &operacao);

    switch (operacao) {

        case 1: {
        
        float num1, num2;
        printf("Escolha 2 numeros para somar:\n");
        scanf("%f\n", &num1);
        scanf("%f\n", &num2);
        float op1(float x, float y);
        op1(num1, num2);}
        break;

        case 2: {
        
        float num3, num4;
        printf("Escolha 2 numeros para subtrair:\n");
        scanf("%f", &num3);
        scanf("%f", &num4);
        float op2(float w, float z);
        op2(num3, num4); }
        break;
    }

}

float op1(float x, float y) {

    float somatorio = x + y;
    printf("O valor da soma eh: %f", somatorio);
    return somatorio;
}

float op2(float w, float z) {

    float subtr = w - z;
    printf("O valor da diferenca eh: %f", subtr);
    return subtr;
}
