#include <stdio.h>

int main () {

int y = 2;
int vetor [3] = {5};

void valorfuncao (int x, int vetor[]);
valorfuncao (y, vetor); // como ja deixou claro que o segundo valor é um veto na declaração da função, ñ se coloca mais '[]'. 

printf("O valor y na main eh: %i\n", y);
printf("O valor vetor[1] na main eh: %i\n", vetor[1]);

    return 0;
}

void valorfuncao (int x, int vetor[]) {

    x = x + 2; // x = y (n posso por y pois é apenas acessível na função 'main')
    vetor[1] = 10; // Aqui eu atribui um valor para vetor[1] pois antes não havia, por isso mudou na main
    
    printf("O valor y na funcao eh: %i\n", x);
    printf("O valor vetor[1] na funcao eh: %i\n", vetor[1]);
}

/* conclusao: o valor na main o valor valor não é alterado. a funcao apenas cria uma copia da int/float/char na funcao e se alterar
o valor na funcao, so mudará nela */ 
